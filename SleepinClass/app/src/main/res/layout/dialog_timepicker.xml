<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical"
    tools:context="com.example.voidbluelabtop.sleepinclass.FORPROFESSOR.Settimedialog"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="시작 시간"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/SP_setday"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TimePicker
        android:id="@+id/TP_starttime"
        android:layout_width="246dp"
        android:layout_height="150dp"
        android:timePickerMode="spinner"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:layout_marginEnd="116dp"
        android:text="종료 시간"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="190dp" />

    <TimePicker
        android:id="@+id/TP_endtime"
        android:layout_width="246dp"
        android:layout_height="150dp"
        android:timePickerMode="spinner"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="230dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_timeaccept"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="확인"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="380dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="46dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_timecancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="49dp"
            android:text="취소"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="380dp" />
    </LinearLayout>

</LinearLayout>
